<h1><%= @album.name %></h1>
<%= image_tag @album.image_url %>

<h3>Track List:</h3>

<ol><% @album.songs.each do |song| %>
    <li><%= link_to song.name, artist_song_path(@album.artist, song) %></li>
    <% if song.music_url %>
        <audio src=<%= song.music_url %> controls>
        </audio>
    <% end %>
<% end %></ol>

<%= button_to "Back to Artist", artist_path(@album.artist), method: :get %>