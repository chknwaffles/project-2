
  <h1 class="user-name"><%= @user.username %></h1><br>
  <%=button_to "Start Searching for Artists", '/', method: :get, :class => 'artist-search'%><br>
  <% if !@user.ratings.empty? %>
    <h5 class="r">All User ratings:</h5><br>
      <% @user.ratings.each do |rating| %>
        <div class='rated'><%= link_to "#{rating.song.name} - #{rating.stars}/10", artist_song_path(rating.song.artist, rating.song)%> <%= button_to "Delete Rating", delete_rating_path(id: rating.id), method: :delete %></div><br>
  <% end %>
      <br>
      <br>
      <%else%>
        <h5 class="r">You haven't rated songs yet!</h5><br>

    <% end %>

<% if current_user == @user %>
  <%= button_to 'Delete this Account', user_path(@user), method: :delete, data: { confirm: 'are u sure lol' }, :class => 'delete-account' %>
<% end %>


 