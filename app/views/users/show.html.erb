<h1> USER SHOW PAGE</h1>

<body>
  <p><%= @user.username %></p>
  <% if !@user.ratings.empty? %>
    <p>All User ratings:</p>
      <% @user.ratings.each do |rating| %>
        <%= link_to rating.song.name, artist_song_path(rating.song.artist, rating.song) %> - <%= rating.stars %>/10
         <%# button_to "Delete Rating", delete_rating_path, method: :delete  %>
        <br>
      <% end %>
    <% end %>
</body>

<% if current_user == @user %>
  <%= button_to 'Delete this Account', user_path(@user), method: :delete, data: { confirm: 'are u sure lol' } %>
<% end %>

<%=button_to "Start Searching for Artists", '/', method: :get%>
 